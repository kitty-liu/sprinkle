{
  "manifest_version": 2,
  "name":    "KitBrit",
  "version": "0.0",
  "offline_enabled": true,

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },


  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Click to open kitbrit!!!!"
  },

  "content_scripts": [{
    "matches":    ["<all_urls>"],
    "js":         ["content.js"],
    "run_at":     "document_idle",
    "all_frames": false
  }]

 
}